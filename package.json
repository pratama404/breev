{
  "name": "breev-monitoring-system",
  "version": "2.0.0",
  "description": "Breev: Hybrid IoT Air Quality Monitoring with AI Forecasting",
  "main": "index.js",
  "scripts": {
    "dev": "cd web-frontend && npm run dev",
    "build": "cd web-frontend && npm run build",
    "start": "cd web-frontend && npm start",
    "backend": "docker compose -f backend-services/docker-compose.yml up -d",
    "backend:stop": "docker compose -f backend-services/docker-compose.yml down",
    "backend:logs": "docker compose -f backend-services/docker-compose.yml logs -f",
    "setup": "npm run backend && cd web-frontend && npm install && npm run dev",
    "firmware": "cd firmware && pio run --target upload",
    "monitor": "cd firmware && pio device monitor"
  },
  "keywords": [
    "iot",
    "air-quality",
    "monitoring",
    "esp32",
    "mqtt",
    "nextjs",
    "machine-learning",
    "physics-informed-neural-network"
  ],
  "author": "Breev Team",
