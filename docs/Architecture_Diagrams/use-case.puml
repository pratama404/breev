@startuml Use Case Diagram - Breev
left to right direction
skinparam packageStyle rectangle

actor "Building Manager" as Admin
actor "Public User" as Public
actor "ESP32 Device" as Device

package "Breev System" {
    package "Core Monitoring" {
        usecase "Send Sensor Data\n(UC-CORE-01)" as UC_01
        usecase "Validate API Key\n(UC-CORE-02)" as UC_02
        usecase "Store Telemetry\n(UC-CORE-03)" as UC_03
    }

    package "Dashboard & Analytics" {
        usecase "Login to Dashboard\n(UC-WEB-01)" as UC_04
        usecase "View Real-time Charts\n(UC-WEB-02)" as UC_05
        usecase "Download PDF Report\n(UC-WEB-03)" as UC_06
        usecase "Manage Devices\n(UC-WEB-04)" as UC_07
    }

    package "AI & Intelligence" {
        usecase "Generate 6h Forecast\n(UC-AI-01)" as UC_08
        usecase "Calculate Daily Insight\n(UC-AI-02)" as UC_09
    }

    package "Public Access" {
        usecase "Scan Room QR Code\n(UC-PUB-01)" as UC_10
        usecase "View Room Status\n(UC-PUB-02)" as UC_11
    }
}

' Relations
Device --> UC_01
UC_01 ..> UC_02 : include
UC_02 ..> UC_03 : include

Admin --> UC_04
UC_04 --> UC_05
Admin --> UC_06
Admin --> UC_07

Public --> UC_10
UC_10 ..> UC_11 : include
UC_11 ..> UC_08 : include

note right of UC_01
  Details in sequence-ingestion.puml
end note

note right of UC_10
  Details in sequence-qr-access.puml
end note

@enduml