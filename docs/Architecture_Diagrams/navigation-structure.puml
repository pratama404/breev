@startuml Navigation Structure - Breev Dashboard
title Application Navigation Map

state "Landing Page" as Home
state "Admin Login" as Login
state "Public Scan" as QR_Page

state "Admin Dashboard" as Admin {
    state "Overview" as DB_Home
    state "Device Management" as DB_Devices
    state "Analytics & Trends" as DB_Analytics
    state "System Settings" as DB_Settings
}

[*] --> Home : Visit Root
Home --> Login : Click Login
Home --> QR_Page : Scan QR

Login --> DB_Home : Auth Success (Token)
Login --> Login : Auth Fail

DB_Home --> DB_Devices : Sidebar
DB_Home --> DB_Analytics : Sidebar
DB_Home --> DB_Settings : Sidebar

DB_Devices --> DB_Devices : Add/Delete Device
DB_Settings --> DB_Settings : Generate API Key

QR_Page --> QR_Page : View Realtime
QR_Page --> QR_Page : View Forecast

@enduml