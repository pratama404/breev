@startuml C4 Context Diagram
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title System Context Diagram - Breev 2.0
 
Person(occupant, "Building Occupant", "Person who works or visits the building")
Person(admin, "Building Manager", "Administrator who manages the system")

System(breev_system, "Breev System", "Smart AQI Monitoring with AI Forecasting")

System_Ext(tunnel, "Cloudflare Tunnel", "Secure Internet Access for Local Backend")
System_Ext(vercel, "Vercel Cloud", "Frontend Hosting & Delivery")
System_Ext(mongo_cloud, "MongoDB Atlas", "Cloud Database")

Rel(occupant, breev_system, "Scans QR, views AQI status", "HTTPS")
Rel(admin, breev_system, "Manages devices, Downloads PDF", "HTTPS")

Rel(breev_system, tunnel, "Exposes Backend API", "TCP/8000")
Rel(breev_system, vercel, "Serves UI", "HTTPS")
Rel(breev_system, mongo_cloud, "Stores Data", "TCP/27017")

@enduml