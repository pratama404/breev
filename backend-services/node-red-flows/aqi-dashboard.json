    {
        "id": "mqtt-in",
        "type": "mqtt in",
        "z": "flow2",
        "name": "AQI Sensor Data",
        "topic": "aqi/sensor/+/telemetry",
        "qos": "1",
        "datatype": "json",
        "broker": "mqtt-broker",
        "x": 150,
        "y": 100,
        "wires": [
            [
                "validate-ui",
                "alert-logic"
            ]
        ]
    },
    {
        "id": "validate-ui",
        "type": "function",
        "z": "flow2",
        "name": "Parse & Route",
        "func": "if (!msg.payload) return null;\n\n// Create separate messages for dashboard widgets\nvar tempMsg = { payload: msg.payload.temperature };\nvar co2Msg = { payload: msg.payload.co2_ppm };\nvar rssiMsg = { payload: msg.payload.rssi || 0 };\n\nreturn [tempMsg, co2Msg, rssiMsg];",
        "outputs": 3,
        "x": 350,
        "y": 100,
        "wires": [
            [
                "ui-temp"
            ],
            [
                "ui-co2",
                "ui-co2-chart"
            ],
            [
                "ui-rssi"
            ]
        ]
    },
    {
        "id": "alert-logic",
        "type": "function",
        "z": "flow2",
        "name": "Check Thresholds",
        "func": "var co2 = msg.payload.co2_ppm;\nvar msgAlert = null;\n\nif (co2 > 1500) {\n    msgAlert = { payload: \"WARNING: High CO2 Detected! \" + co2 + \" ppm\" };\n}\n\nreturn msgAlert;",
        "outputs": 1,
        "x": 350,
        "y": 250,
        "wires": [
            [
                "ui-alert-toast",
                "debug-alert"
            ]
        ]
    },
    {
        "id": "ui-alert-toast",
        "type": "ui_toast",
        "z": "flow2",
        "position": "top right",
        "displayTime": "3",
        "highlight": "",
        "sendall": true,
